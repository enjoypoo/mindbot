datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  paid      Boolean  @default(false)
  createdAt DateTime @default(now())
  answers   Answer[]
  results   Result[]
}

model Answer {
  id         String   @id @default(cuid())
  questionId Int
  question   String
  answer     String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
}

model Result {
  id         String   @id @default(cuid())
  summary    String
  tags       String[]
  analysis   String[]
  narrative  String
  delivered  Boolean  @default(false)
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
}

